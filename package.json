{
    "name": "nextjs-template",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Eric Wyne",
    "license": "MIT",
    "scripts": {
        "start": "next",
        "build": "next build",
        "lint": "next lint",
        "postinstall": "prisma generate"
    },
    "dependencies": {
        "@prisma/client": "^3.15.0",
        "@trpc/client": "^9.24.0",
        "@trpc/next": "^9.24.0",
        "@trpc/react": "^9.24.0",
        "@trpc/server": "^9.24.0",
        "@types/node": "^17.0.41",
        "@types/react": "^18.0.12",
        "next": "^12.1.6",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-hook-form": "^7.31.3",
        "react-query": "^3.39.1",
        "superjson": "^1.9.1",
        "typescript": "^4.7.3",
        "zod": "^3.17.3"
    },
    "renovate": {
        "extends": [
            "config:base",
            ":automergePatch"
        ],
        "packageRules": [
            {
                "matchPackagePatterns": [
                    "eslint"
                ],
                "groupName": "eslint",
                "schedule": [
                    "before 6am on monday"
                ],
                "automerge": true,
                "automergeType": "branch"
            },
            {
                "matchPackagePatterns": [
                    "trpc"
                ],
                "groupName": "trpc",
                "schedule": [
                    "before 6am on monday"
                ],
                "automerge": true,
                "automergeType": "branch"
            },
            {
                "matchPackagePatterns": [
                    "zod"
                ],
                "groupName": "zod",
                "schedule": [
                    "before 6am on monday"
                ],
                "automerge": true,
                "automergeType": "branch"
            },
            {
                "matchPackagePatterns": [
                    "@types"
                ],
                "groupName": "@types",
                "schedule": [
                    "before 6am on monday"
                ],
                "automerge": true,
                "automergeType": "branch"
            }
        ]
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all",
        "proseWrap": "always",
        "arrowParens": "avoid"
    },
    "devDependencies": {
        "autoprefixer": "10.4.7",
        "eslint": "8.17.0",
        "eslint-config-next": "12.1.6",
        "postcss": "8.4.14",
        "prisma": "3.15.2",
        "tailwindcss": "3.1.4"
    }
}
